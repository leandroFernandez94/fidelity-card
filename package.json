{
  "name": "fidelity-card",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "api:dev": "NODE_ENV=development dotenv -e .env -o -- bun --watch apps/api/src/index.ts",
    "api:start": "NODE_ENV=development dotenv -e .env -o -- bun apps/api/src/index.ts",
    "db:generate": "dotenv -e .env.example -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env.example -- drizzle-kit migrate",
    "db:smoke": "dotenv -e .env.example -- bun scripts/smoke-db.mjs",
    "seed:admin": "bun scripts/seed-admin.mjs",
    "seed:servicios": "bun scripts/seed-servicios.mjs",
    "seed:clientas": "bun scripts/seed-clientas.mjs",
    "seed:all": "bun run seed:admin && bun run seed:servicios && bun run seed:clientas",
    "deps:install": "bun install",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "bun-types": "^1.3.10",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^9.0.0",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "pg": "^8.19.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
